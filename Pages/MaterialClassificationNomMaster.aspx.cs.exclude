    #region"GridView Events"

    protected void gvMaterialClassificationNom_RowDataBound(object sender, GridViewRowEventArgs e)
    {
        try
        {
            if (e.Row.RowType == DataControlRowType.Header)
            {
                e.Row.Cells[0].Attributes.Add("style", "text-align:center;");
                e.Row.Cells[1].Attributes.Add("style", "text-align:left;");
                e.Row.Cells[2].Attributes.Add("style", "text-align:left;");
                e.Row.Cells[3].Attributes.Add("style", "text-align:center;");
                e.Row.Cells[4].Attributes.Add("style", "text-align:center;");
            }
            else if (e.Row.RowType == DataControlRowType.DataRow)
            {
                e.Row.Cells[0].Attributes.Add("style", "text-align:center;");
                e.Row.Cells[1].Attributes.Add("style", "text-align:left;");
                e.Row.Cells[2].Attributes.Add("style", "text-align:left;");
                e.Row.Cells[3].Attributes.Add("style", "text-align:center;");
                e.Row.Cells[4].Attributes.Add("style", "text-align:center;");
            }
        }
        catch (Exception ex)
        {
            Log.Message(ex.ToString());
        }
    }

    protected void gvMaterialClassificationNom_RowCommand(object sender, GridViewCommandEventArgs e)
    {
        try
        {
            if (e.CommandName.ToString() == "EditMaterialNomName")
            {
               

                int index = Convert.ToInt32(e.CommandArgument.ToString());

                Label lblMaterialGroupName = (Label)gvMaterialClassificationNom.Rows[index].FindControl("lblMaterialGroupName");

                string CMID = gvMaterialClassificationNom.DataKeys[index].Values[0].ToString();
                ddlMaterialGroup.SelectedValue = lblMaterialGroupName.Text.ToString();
                txtClassificationNom.Text = ((Label)gvMaterialClassificationNom.Rows[index].FindControl("lblMaterialNomName")).Text;
                hdnCMID.Value = CMID;
                if (this.gvMaterialClassificationNom.Rows.Count > 0)
                {
                    gvMaterialClassificationNom.UseAccessibleHeader = true;
                    gvMaterialClassificationNom.HeaderRow.TableSection = TableRowSection.TableHeader;
                }
                ScriptManager.RegisterStartupScript(this, this.GetType(), "ShowAdd", "showDataTable();", true);
            }
        }
        catch (Exception ex)
        {
            Log.Message(ex);
        }
    }

    #endregion

    #region "Common Methods"

    private void bindMaterialClassificationMaster()
    {
        try
        {
            DataSet dsMaterialNomDetails = new DataSet();

            dsMaterialNomDetails = _objCommon.GetMaterialClassificationMaster();

            ddlMaterialGroup.Items.Clear();

            _objCommon.GetMaterialGroupName(ddlMaterialGroup);
            ViewState["DataTable"] = dsMaterialNomDetails.Tables[0];

            if (dsMaterialNomDetails.Tables[0].Rows.Count > 0)
            {
                divDownload.Visible = true;
                gvMaterialClassificationNom.DataSource = dsMaterialNomDetails.Tables[0];
                gvMaterialClassificationNom.DataBind();

                gvMaterialClassificationNom.UseAccessibleHeader = true;
                gvMaterialClassificationNom.HeaderRow.TableSection = TableRowSection.TableHeader;

                ScriptManager.RegisterStartupScript(this, this.GetType(), "function", "showDataTable();", true);
            }

            else
            {
                divDownload.Visible = false;
                gvMaterialClassificationNom.DataSource = "";
                gvMaterialClassificationNom.DataBind();
            }

            hdnCMID.Value = "0";
            txtClassificationNom.Text = "";
            ddlMaterialGroup.SelectedValue = "0";
        }
        catch (Exception ex)
        {
            Log.Message(ex.ToString());
        }
    }

    #endregion

}